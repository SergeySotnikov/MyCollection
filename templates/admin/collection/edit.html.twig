{% extends 'Admin/Laoyout/layout_main.html.twig' %}

{% block title_detailed %}Edit Collection{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <a href="{{ path('admin_collection_list') }}" class="font-weight-bold text-primary">Collection</a>
                    <div class="ml-2 mr-2">/</div>
                    <h6 class="m-0 font-weight-bold text-primary">
                        {% if collection.id %}
                            Edit
                        {% else %}
                            Add New
                        {% endif %}
                    </h6>
                </div>

                <a href="{{ path('admin_collection_add') }}" class="d-sm-inline-block btn btn-sm btn-info shadow-sm">
                    <i class="fas fa-plus fa-sm text-white-50"></i> Add new
                </a>
            </div>


        </div>

        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.name) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.name) }}
                    <div class="form-error">
                        {{ form_errors(form.name) }}
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.description) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.description) }}
                    <div class="form-error">
                        {{ form_errors(form.description) }}
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.theme) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.theme) }}
                    <div class="form-error">
                        {{ form_errors(form.theme) }}
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.cover) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.cover) }}
                    <div class="form-error">
                        {{ form_errors(form.cover) }}
                    </div>
                </div>
            </div>

            <hr/>

            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a href="{{ path('admin_collection_list') }}" class="btn  btn-return mr-5">
                        <i class="fas fa-arrow-alt-circle-left"></i>
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Save changes
                    </button>
                </div>

                {% if collection %}
                    <a class="btn btn-white" data-toggle="modal" data-target="#approveDeleteModal">
                        <i class="fas fa-times fa-sm"></i> Delete row
                    </a>
                {% endif %}

            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>

    {% if collection.id %}

        <div class="modal fade" id="approveDeleteModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"> Are you sure?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">x</span>
                        </button>
                    </div>
                    <div class="modal-body">Item will be deleted</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal"> Cancel</button>
                        <a class="btn btn-primary" href="{{ path('admin_collection_delete', {'id':collection.id}) }}">Delete row</a>
                    </div>
                </div>
            </div>
        </div>

    {% endif %}

{% endblock %}