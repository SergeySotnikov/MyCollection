{% extends 'Admin/Laoyout/layout_main.html.twig' %}

{% block title_detailed %}All Users{% endblock %}

{% block body %}
    <div class="card shadow mb-4">

        <div class="card-header py-3">
            {% include 'Admin/_card/_header_action.html.twig' with {
                'sectionTitle': 'User ',
                'actionURL': path('admin_user_add')

            } %}
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="main_table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Profile info</th>
                        <th>Is verified email</th>
                        <th>From facebook</th>
                        <th>From google</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in pagination %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if "ROLE_ADMIN" in user.roles %}
                                    <strong>Admin</strong>
                                {% else %}
                                    User
                                {% endif%}
                                <br>
                                <small>{{ user.roles|join(', ', ' and ') }}</small>
                            </td>

                            <td>
                                Full name: {{ user.fullName }} <br>
                                Phone: {{ user.phone }} <br>
                                Address: {{ user.adress }} <br>
                                Zip code: {{ user.zipcode }}
                            </td>
                            <td>
                                {% if user.verified %}
                                    verified
                                {% else %}
                                    not verified
                                {% endif %}
                            </td>
                            <td>
                                {% if user.facebookId %}
                                    +
                                {% endif%}

                            </td>
                            <td>
                                {% if user.googleId%}
                                    +
                                {% endif %}
                            </td>

                            <td>
                                <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-info">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div  class = "navigation">

                {{ knp_pagination_render(pagination) }}

            </div>
            </div>

        </div>
    </div>
{% endblock %}