{% extends 'main/base.html.twig' %}

{% block title %}Log In - My Collections{% endblock %}

{% block body %}
    <div class="page-content pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-details page-login mt-4">
                        <h1 class="h3 mb-3 font-weight-normal title-gradient-1">
                            Please Sign In
                        </h1>
                        <form method="post" id="form">

                            <div class="form-group">
                                <label for="inputEmail">Username or email address *</label>
                                <input type="email" value="{{ last_username }}" class="form-control" id="inputEmail" name="email" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="inputPassword">Password *</label>
                                <input type="password" class="form-control" id="inputPassword" name="password" required>
                            </div>


                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-footer-buttons">
                                <button type="submit" class="btn btn-success">
                                    <span>LOG IN</span>
                                </button>
                                <a href="{{ path('main_register') }}" class="btn btn-link btn-dark">
                                    <i class="fas fa-user"></i>
                                    <span>Create an account</span>
                                </a>
                            </div>
                        </form>

                            <div class="form-additional mt-2 pt-1">

                                <div class="row">
                                    <div class="col-sm-12 text-center">
                                        <a href="#" class="btn btn-link btn-dark">
                                            <i class="fas fa-google"></i>
                                            Login with Google
                                        </a>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 text-center mt-1">
                                        <a href="{{ path('connect_facebook_start') }}" class="btn btn-link btn-dark">
                                            <i class="fas fa-facebook"></i>
                                            Login with Facebook
                                        </a>
                                    </div>
                                </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
